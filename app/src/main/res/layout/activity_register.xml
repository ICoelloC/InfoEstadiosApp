<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".LoginActivity"
        android:orientation="vertical"
        android:background="@drawable/fondo">

    <ImageView
            android:id="@+id/registerFoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/user"
            android:contentDescription="@string/logoapp"
            android:layout_gravity="center"
            app:layout_constraintHorizontal_bias="0.501"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="@string/registrarse" />


    <EditText
            android:id="@+id/registerUsername"
            style="@style/editTextLoginRegister"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:autofillHints="introduzca el nombre de usuario"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="10dp" />

    <EditText
            android:id="@+id/registerEmail"
            style="@style/editTextLoginRegister"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:autofillHints="introduzca un correo electrónico"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="10dp" />

    <EditText
            android:id="@+id/registerPassword"
            style="@style/editTextLoginRegister"
            android:hint="@string/contrasenia"
            android:inputType="textEmailAddress"
            android:autofillHints="introduzca la contraseña"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>


    <Button
            android:id="@+id/registerBtnRegister"
            android:layout_width="250dp"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            style="@style/primaryButton"
            android:text="@string/registrarse" />

    <Button
            android:id="@+id/registerGoLoginButton"
            android:layout_width="250dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            style="@style/primaryButton"
            android:text="@string/login" />


</LinearLayout>