<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:id="@+id/mapaEstadio">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/fondo"
            android:id="@+id/mapaEstadioRelative">


        <TextView
                android:text="Nombre del estadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mapaEstadioTextNombre"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                tools:text="Lugar"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center|center_horizontal|center_vertical" />


        <TextView
                android:text="Capacidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mapaLugarTextCapacidad"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                tools:text="Capacidad"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:textSize="18sp"
                android:gravity="center|center_horizontal|center_vertical"
                android:textColor="@color/white" />

        <TextView
                android:text="Equipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mapaLugarTextEquipo"
                android:layout_marginTop="80dp"
                android:textStyle="bold"
                tools:text="Equipo"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-6dp"
                android:textSize="18sp"
                android:gravity="center|center_horizontal|center_vertical"
                android:textColor="@color/white" />

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="462dp"
                app:srcCompat="@drawable/logo"
                android:id="@+id/mapaEstadioImagen"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/mapaLugarTextEquipo"
                android:scaleType="fitCenter" />

    </RelativeLayout>

</FrameLayout>